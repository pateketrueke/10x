{
  "name": "solvente",
  "version": "0.0.0",
  "bin": {
    "calc": "cli"
  },
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "dev:test": "npm run test -- -w",
    "mocha": "_mocha --exit --recursive -bR spec",
    "test": "npm run test:unit --",
    "test:ci": "npm run test:coverage -- -r lcov",
    "test:unit": "TZ=UTC npm run mocha -- -r esm 'tests/*.test.js'",
    "test:coverage": "npm run coverage -- npm run test:unit && npm run report --",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "coverage": "nyc -x '**/tests/**' -x '**/*.test.js' --",
    "report": "nyc report"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "convert-units": "^2.3.4",
    "currency-symbol.js": "^1.0.0",
    "emoji.json": "^12.1.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.1",
    "eslint-plugin-svelte3": "^2.7.2",
    "esm": "^3.2.25",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rollup": "^1.10.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.0.0",
    "timekeeper": "^2.2.0"
  }
}
